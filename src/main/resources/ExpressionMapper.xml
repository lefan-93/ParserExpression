<!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ExpressionMapper">
    <select id="getExpression"
            parameterType="java.lang.Integer"
            resultType="dto.ExpressionDto">
        select * from expressions where expression_id = #{id}
    </select>
    <select id="getChildren"
            parameterType="java.lang.Integer"
            resultType="dto.ExpressionDto">
        select e.* from expressions e JOIN expression_relationships rel on rel.child_id = e.expression_id where rel.parent_id = #{id}
    </select>
</mapper>